<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
        <title>{% block title %}Application{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/app/bower_components/bootstrap/dist/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/app/bower_components/font-awesome/css/font-awesome.min.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/app/bower_components/Ionicons/css/ionicons.min.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/app/adminLTE/css/AdminLTE.min.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/app/adminLTE/css/skins/skin-blue.min.css') }}">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
        {% block stylesheets %}{% endblock %}
    </head>
    <body class="hold-transition skin-blue sidebar-mini">
        <div class="wrapper">
            
            {# TOP NAVIGATION #}
            <header class="main-header">
                <a href="{{ path('home') }}" class="logo">
                    <span class="logo-mini"><b>A</b>PP</span>
                    <span class="logo-lg"><b>A</b>pplication</span>
                </a>

                <nav class="navbar navbar-static-top" role="navigation">
                    <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                        <span class="sr-only">Toggle navigation</span>
                    </a>
                    <div class="navbar-custom-menu">
                        <ul class="nav navbar-nav">

                        </ul>
                    </div>
                </nav>
            </header>

            {# LEFT NAVIGATION #}
            <aside class="main-sidebar">
                <section class="sidebar">
                    {{ render(controller('AppBundle:Main:displayLeftNavigation')) }}
                </section>
            </aside>

            {# PAGE CONTENT #}
            <div class="content-wrapper">
                {% if block('page_content_title') %}
                    <section class="content-header">
                        {% block page_content_title %}{% endblock %}
                    </section>
                {% endif %}
                <section class="content container-fluid">
                    {% block page_content %}{% endblock %}
                </section>
            </div>

            {# FOOTER #}
            <footer class="main-footer">
                <strong>Application</strong>
            </footer>

        </div>

        <script src="{{ asset('bundles/app/bower_components/jquery/dist/jquery.min.js') }}"></script>
        <script src="{{ asset('bundles/app/bower_components/bootstrap/dist/js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('bundles/app/adminLTE/js/adminlte.min.js') }}"></script>
        {% block javascripts %}{% endblock %}

    </body>
</html>